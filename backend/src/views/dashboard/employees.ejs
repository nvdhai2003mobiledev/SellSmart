        e.preventDefault();
        if (currentPageIndex > 1) {
            currentPageIndex--;
            updateEmployeeDisplay();
        }
    });
    
    $('#nextPage').click(function(e) {
        e.preventDefault();
        const totalPages = Math.ceil(filteredEmployees.length / itemsPerPage);
        if (currentPageIndex < totalPages) {
            currentPageIndex++;
            updateEmployeeDisplay();
        }
    });
    
